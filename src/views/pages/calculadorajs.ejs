<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <style>
            .container{
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .calculadora{
                margin: 25px;
                padding: 20px;
                border: 1px solid black;
                border-radius: 5px;
                box-shadow: 2px 2px rgba(0, 0, 0, 0.479);
            }
            .pantalla{
                background-color: greenyellow;
                text-align: end;
                width: 200px;
                height: 30px;
            }
            .botones{
                padding: 10px;
            }
            .btn{
                margin: 3px;
                border: 1px solid rgba(0, 0, 0, 0.218);
            }
            .btn:hover{
                background-color: coral;
                cursor: pointer;
            }
        </style>
      </head>
      
      <body>
      <header>
        <%- include('../partials/header'); %>
      </header>
    <div class="container">
        <div class="calculadora">

            <div id="pantalla" class="pantalla"></div>
            
            <div class="botones">
 
                <div class="fila">
                    <div id="siete" class="btn">7</div>
                    <div id="ocho" class="btn ">8</div>
                    <div id="nueve" class="btn ">9</div>
                    <div id="mas" class="btn ">+</div>
                </div>
                
                <div class="fila">
                    <div id="cuatro" class="btn">4</div>
                    <div id="cinco" class="btn">5</div>
                    <div id="seis" class="btn">6</div>
                    <div id="menos" class="btn">-</div>
                </div>
                
                <div class="fila">
                    <div id="uno" class="btn">1</div>
                    <div id="dos" class="btn">2</div>
                    <div id="tres" class="btn">3</div>
                    <div id="multiplicacion" class="btn">*</div>
                </div>
                
                <div class="fila">
                    <div id="cero" class="btn">0</div>
                    <div id="reset" class="btn">c</div>
                    <div id="igual" class="btn">=</div>
                    <div id="division" class="btn">/</div>
                </div>

            </div>
            
        </div>

    </div>
        
    <footer>
            <%- include('../partials/footer'); %>
        </footer>
        
    <script>
        let pantalla = document.querySelector('#pantalla');

        let cero = document.querySelector('#cero');
        let uno = document.querySelector('#uno');
        let dos = document.querySelector('#dos');
        let tres = document.querySelector('#tres');
        let cuatro = document.querySelector('#cuatro');
        let cinco = document.querySelector('#cinco');
        let seis = document.querySelector('#seis');
        let siete = document.querySelector('#siete');
        let ocho = document.querySelector('#ocho');
        let nueve = document.querySelector('#nueve');

        let mas = document.querySelector('#mas');
        let menos = document.querySelector('#menos');
        let multiplicacion = document.querySelector('#multiplicacion');
        let division = document.querySelector('#division');

        let igual = document.querySelector('#igual');
        let reset = document.querySelector('#reset');

        let operadorA;
        let operadorB;
        let resultado = '';

        uno.addEventListener('click', () => { 
            pantalla.textContent += '1';
        })
        dos.addEventListener('click', () => { 
            pantalla.textContent += '2';
        })
        tres.addEventListener('click', () => { 
            pantalla.textContent += '3';
        })
        cuatro.addEventListener('click', () => { 
            pantalla.textContent += '4';
        })
        cinco.addEventListener('click', () => { 
            pantalla.textContent += '5';
        })
        seis.addEventListener('click', () => { 
            pantalla.textContent += '6';
        })
        siete.addEventListener('click', () => { 
            pantalla.textContent += '7';
        })
        ocho.addEventListener('click', () => { 
            pantalla.textContent += '8';
        })
        nueve.addEventListener('click', () => { 
            pantalla.textContent += '9';
        })
        cero.addEventListener('click', () => { 
            pantalla.textContent += '0';
        })
        

        mas.addEventListener('click', () => {
            if(pantalla.textContent.slice(-1) == '+' || pantalla.textContent.slice(-1) == ''){
                alert('error ingrese un numero');
            }else{
                pantalla.textContent += '+';
            };
        
        });+

        menos.addEventListener('click', () => {
            if(pantalla.textContent.slice(-1) == '-' || pantalla.textContent.slice(-1) == ''){
                alert('error ingrese un numero');
            }else{
                pantalla.textContent += '-';
            };
        
        });

        multiplicacion.addEventListener('click', () => {
            if(pantalla.textContent.slice(-1) == '*' || pantalla.textContent.slice(-1) == ''){
                alert('error ingrese un numero');
            }else{
                pantalla.textContent += '*';
            };
        
        });

        division.addEventListener('click', () => {
            if(pantalla.textContent.slice(-1) == '/' || pantalla.textContent.slice(-1) == ''){
                alert('error ingrese un numero');
            }else{
                pantalla.textContent += '/';
            };
        
        });

        igual.addEventListener('click', () => {
            pantalla.textContent = eval(pantalla.textContent);
        });


        reset.addEventListener('click', () => {
            operadorA = '';
            operadorB = '';
            resultado = '';
            pantalla.textContent = '';
        });
    </script>
</body>
</html>